{
  "name": "colibri",
  "private": false,
  "description": "ajax proxy v2",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C ./packages/shell-addon dev",
    "watch": "run-p watch:lib watch:page",
    "watch:lib": "pnpm -C ./packages/colibri-lib.v2 watch",
    "watch:page": "pnpm -C ./packages/shell-chrome watch",
    "build": "run-p build:utils build:lib build:page",
    "build:lib": "pnpm -C ./packages/colibri-lib.v2 build",
    "build:utils": "pnpm -C ./packages/shared-utils build",
    "build:page": "pnpm -C ./packages/shell-chrome build",
    "clean:build": "rm -rf ./packages/colibri-lib.v2/lib ./packages/shell-chrome/build ./packages/shared-utils/lib",
    "pkg": "cp -r ./packages/shell-addon/dist ./packages/shell-chrome/build/popups"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g0ngjie/colibri.git"
  },
  "keywords": [],
  "author": {
    "name": "Gj",
    "email": "gongjie0422@163.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g0ngjie/colibri/issues"
  },
  "homepage": "https://github.com/g0ngjie/colibri#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}